<div class="container pt-3">
  <div class="row">
    <div class="col">

      <%= form_for @inquiry, :url => inquirys_confirm_path do |f| %>
        <div class="page-header">
          <h1>お問い合わせ</h1>
        </div>

        <% if @inquiry.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <strong>入力内容にエラーがあります</strong>
            <ul>
              <% @inquiry.errors.each do |attr, msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <table class="table">
          <tr>
            <th>名前<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
          <tr>
            <th>メールアドレス<span class="text-danger">（必須）</span></th>
            <td><%= f.text_field :email, class: "form-control" %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td><%= f.text_area :message, class: "form-control" %></td>
          </tr>
        </table>
        <div class="row justify-content-center mt-2 mb-2 pt-5">
          <%= f.submit "確認", class: 'btn btn-secondary' %>
        </div>
      <% end %>

    </div>
  </div>
</div>