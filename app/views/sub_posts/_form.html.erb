<%= form_with model:[main_post, sub_post], local:true do |f| %>
  <%= f.label "タイトル" %>
  <%= f.text_field :title, class: "form-control name" %>

  <%= f.label "本文" %>
  <%= f.text_area :content, class: "form-control introduction" %>

  <%= f.label :Youtube_Url %>
  <%= f.text_field :youtube_url, class: "form-control youtube_url", :placeholder => "https://www.youtube.com/~" %>

  <%= f.label :image %>
  <%= f.attachment_field :image, class: "form-control-file user_image" %>

  <%= f.label :audio %>
  <%= f.file_field :audio, class: "form-control-file user_audio" %>

  <div class="row justify-content-center mt-2 mb-2 pt-5">
    <%= f.submit "投稿", class: 'btn-sm btn-outline-secondary mt-3' %>
  </div>

<% end %>