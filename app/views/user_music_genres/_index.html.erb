<a>得意音楽ジャンル一覧</a>
<% if user.id == current_user.id %>
  <%= form_with url: user_user_music_genres_path(user), model: user_music_genre, local: true do |f| %>
    <%= f.collection_select :music_genre_id, MusicGenre.all, :id, :name, include_blank: "-- 選択してください --"  %>
    <%= f.submit "追加", class: "btn btn-outline-dark ml-3" %>
  <% end %>
<% end %>

<table>
  <thead>
    <tr><th>得意音楽ジャンル名</th><th></th></tr>
  </thead>
  <tbody>
    <% user_music_genres.each do |user_music_genre| %>
    <tr>
      <td><%= user_music_genre.music_genre.name %></td>
      <% if user.id == current_user.id %>
      <td><%= link_to '削除', user_user_music_genre_path(user, user_music_genre), method: :delete %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>