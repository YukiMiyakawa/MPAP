<div class="row justify-content-center m-2">
  <%= form_with url: admins_instruments_path, model: instrument, local: true do |f| %>
    <%= f.text_field :name, placeholder: "使用楽器追加" %>
    <%= f.submit "追加", class: "btn btn-outline-dark ml-3" %>
  <% end %>
</div>

<table class="table table-dark">
  <thead>
    <tr class="table-active"><th class="text-center">楽器名</th><th></th><th></th></tr>
  </thead>
  <tbody>
    <% instruments.each do |instrument| %>
    <tr>
      <td class="text-center"><%= instrument.name %></td>
      <td class="text-center"><%= link_to '編集', edit_admins_instrument_path(instrument.id), class: "text-light" %></td>
      <td class="text-center"><%= link_to '削除', admins_instrument_path(instrument.id), method: :delete, class: "text-light" %></td>
    </tr>
    <% end %>
  </tbody>
</table>