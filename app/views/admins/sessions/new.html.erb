<div class="container pt-3">
  <div class="row">

    <div class="col-md-12">
      <div class="text-center p-2"><h5><strong>管理者ログイン</strong></h5></div>
      <div class="row d-flex justify-content-around">

            <div class="col-md-6 shadow m-1 p-5">


              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label "メールアドレス" %><br />
                  <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>

                <div class="field">
                  <%= f.label "パスワード" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div class="actions">
                  <div class="row justify-content-center mt-2 mb-2 pt-5">
                    <%= f.submit "ログイン", class: 'btn btn-secondary mt-2' %>
                  </div>
                </div>
              <% end %>

            </div>

      </div>

    </div>
  </div>
</div>
