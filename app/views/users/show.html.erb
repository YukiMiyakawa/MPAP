<div class="container">
  <h1>Show</h1>

  <div class="row">
    <div class="col">
      <%= @user.name %>
      <p><%= link_to '編集', edit_user_path(@user) %></p>

      <p>follows <%= link_to @user.followings.count, user_followings_path(@user) %></p>
      <p>followers <%= link_to @user.followers.count, user_followers_path(@user) %></p>
      <% if @user.id != current_user.id %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!--Tweet部分-->
  <div class="row">
    <div><%= render "tweets/form", tweet: @tweet, user: @user %></div>
    <div><%= render "tweets/index", tweets: @tweets, user: @user %></div>
  </div>

  <div><%= link_to '退会はこちら', confirm_unsubscribe_path(@user.name) %></div>

</div>