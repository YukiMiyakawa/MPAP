<h1>Show</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <%= @user.name %>
      <%= link_to '編集', edit_user_path(@user) %>

      <p>follows</p>
      <%= link_to @user.followings.count, user_followings_path(@user) %>
      <p>followers</p>
      <%= link_to @user.followers.count, user_followers_path(@user) %>
      <% if @user.id != current_user.id %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user), method: :delete, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-success" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>