<div class="container pt-3">
  <div class="row">

    <div class="col-md-12">
      <div class="text-center p-2"><h5><strong>Follow一覧</strong></h5></div>
      <div class="row d-flex justify-content-around">

          <% @users.each do |user| %>
            <div class="col-md-2 shadow m-1">
              <%= link_to user_path(user), data: {"turbolinks" => false} do %>
                <%= attachment_image_tag user, :image, format: "jpeg", fallback: "no_user_image.jpg", size: "100x100", class:"d-block mx-auto" %>
                <H5 class="text-center text-dark"><strong><%= user.name %></strong></H5>
              <% end %>
            </div>
          <% end %>

      </div>

    </div>
  </div>
</div>